<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/tvinfoPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/tvinfoOffice"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="?android:attr/alertDialogIcon" />

    <TextView
        android:id="@+id/tvinfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvinfoPicture"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Official Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvinfoOffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:text="Office Name" />

</RelativeLayout>